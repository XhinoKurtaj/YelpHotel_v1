<% include ../partials/header %>
<div class="container"> 
<h1 style="text-align: center">Edit <%= hotel.name %></h1>
 <div style="width: 40%; margin: 30px auto;">
  <form  action="/hotels/<%= hotel._id %>/?_method=PUT" method="POST"> 
   <div class="form-group row"> 
          <div class="col-sm-10"> 
            <input type="text" class="form-control" id="inputName" name="camp[name]" value="<%= hotel.name %>"> 
          </div> 
      </div> 
   <div class="form-group row"> 
        <div class="col-sm-10"> 
           <input type="number" class="form-control" id="inputName" name="camp[price]" value="<%= hotel.price %>" min="0.01" step="0.01"> 
        </div> 
    </div> 
    <div class="form-group row "> 
      <div class="col-sm-10"> <input type="text" class="form-control" id="inputUrl" name="camp[image]" value="<%= hotel.image %>"> 
             </div>
          </div> 
          <div class="form-group row "> 
      <div class="col-sm-10"> <input type="text" class="form-control" id="inputUrl" name="camp[description]" value="<%= hotel.description %>"> 
             </div>
          </div> 
          <div class="form-group">
              <div class="col-sm-10"> <button class="btn btn-lg btn-primary btn-block">Submit</button> </div>
          </div>
       </form> 
        <a href="/hotels">Go Back</a>
 </div> 

</div>

   
<% include ../partials/footer %>
