<% include ../partials/header %>
<style>
.card-img-top{
  width:250px; 
  height: 250px;
  padding: 20px 0 0 30px;
}
</style>
<div class ="container">
  <header class="jumbotron">
      <div class ="container">
          <h1><span class="glyphicon glyphicon-home"></span>Welcome to YelpHotel!!!</h1>
          <p>Best and simple website to review hotels all around the world</p>
          <p>
            <a class="btn btn-primary btn-large" href="hotels/new">Add new hotel</a>
          </p>
        </div>
  </header>
 <div class="row">
      <% hotels.forEach(function(hotel){ %>
        <div class="col-md-4 ">
            <div class="card" style="width: 18rem;">
              <img src="<%= hotel.image %>" class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title"><%= hotel.name %></h5>
                <p class="card-text">
                  <a href="/hotels/<%= hotel._id %>" class="btn btn-primary">More Info</a>
                </p>
              </div>
            </div>
         </div>
     <% }); %>
 </div>
</div>
<% include ../partials/footer %>


