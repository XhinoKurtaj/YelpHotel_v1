<% include ../partials/header %>

<div class ="container">
  <header class="jumbotron">
      <div class ="container">
    <h1><span class="glyphicon glyphicon-home"></span>Welcome to our Rotel!!!</h1>
    <p>Best and simple website to review hotels all around the world</p>
    <p>
        <a class="btn btn-primary btn-large" href="hotels/new">Add new hotel</a>
    </p>     
    </div>
   </header>
 <div class="row">
     <% hotels.forEach(function(hotel){ %>
    <div class="col-md-3 col-sm-6">
        <div class="img-thumbnail"><img style="width: 100%; height: 100%"src= "<%= hotel.image %>">
      <div class="figure-caption"><h4><%= hotel.name %></h4></div>
      <p>
          <a href="/hotels/<%= hotel._id %>" class="btn btn-primary">More Info</a>
      </p>
      </div>
    </div>
     <% }); %>
 </div>
</div>
<% include ../partials/footer %>
